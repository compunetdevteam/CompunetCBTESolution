@model CompunetCbte.ViewModels.CBTE.SelectSubjectViewModel

@{
    ViewBag.Title = "";
}


<div class="well">
    <h2>Instruction(s)</h2>
    <p>
        <ol class="text-bold text-info">
            <li>The Duration of the Selected Exam is <i>@ViewBag.ExamTime</i> min(s)</li>
            <li> The Exam Start Time is <i>@ViewBag.StartTime:00</i> and Stop time is <i>@ViewBag.EndTime:00</i></li>
            <li>The Total Number of Question for the Exam is <i>@ViewBag.TotalQuestion</i> </li>
            <li>The score per Question is <i>@ViewBag.ScorePerQuestion</i>  marks</li>
        </ol>
    </p>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
      
        <hr />
        <h2>@ViewBag.ErrorMessage</h2>
        @*<h2>@ViewBag.ServerDate</h2>*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("SubjectName", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.DropDownList("SubjectName", null, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.SubjectName, "", new { @class = "text-danger" })
            </div>
        </div>
        @*<div class="form-group">
            @Html.Label("Level Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("LevelId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.LevelId, "", new { @class = "text-danger" })
            </div>
        </div>*@
        <div class="form-group">
            @Html.Label("Exam Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-7">
                @Html.DropDownList("ExamTypeId", null, htmlAttributes: new { @class = "form-control", @readonly = "true" })
                @Html.ValidationMessageFor(model => model.ExamTypeId, "", new { @class = "text-danger" })
            </div>
        </div>
        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Start Exam" class="btn ink-reaction btn-raised btn-primary btn-loading-state" />
            </div>
        </div>
    </div>
}

<h2>@ViewBag.ServerDate</h2>